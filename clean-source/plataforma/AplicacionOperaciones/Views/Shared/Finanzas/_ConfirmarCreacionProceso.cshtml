<div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
    <h1 class="family-teamwork">¿Esta seguro de crear el proceso de pago para @ViewBag.ReferenciaGlosaPago de finiquitos?</h1>
    @using (Ajax.BeginForm("CrearProceso", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "procesoPago",
        LoadingElementId = "loader"
    }))
    {
        <input type="text" name="codigoPago" value="@ViewBag.ReferenciaMetodoPago" class="dspl-none" />
        <button type="submit" class="btn btn-success"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-check" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Confirmar Creación del</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                        font-size: 14px; font-style: normal; display: block;">Proceso de Pago</i>
            </span>
        </button>
    }
    @using (Ajax.BeginForm("ReturnStageInicial", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "procesoPago",
        LoadingElementId = "loader"
    }))
    {
        <button type="submit" class="btn btn-danger"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-cancel" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Volver a Seleccionar</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                        font-size: 14px; font-style: normal; display: block;">Proceso de Pago</i>
            </span>
        </button>
    }
</div>