@using Teamwork.Model.Operaciones
<div class="row ml-auto mr-auto" style="width: 90%;">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
        <h1 class="new-family-teamwork ta-center" style="font-weight: 100;">Historial de cargo mod</h1>
        <table style="width: 100%;" border="1">
            <thead>
                <tr>
                    <th style="text-align: center;">Usuario</th>
                    <th style="text-align: center;">Estado</th>
                    <th style="text-align: center;">Fecha</th>
                    <th style="text-align: center;">Comentario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (HistorialCargoMod item in ViewBag.Historial)
                {
                    <tr>
                        <td>@item.Usuario</td>
                        <td>@item.Estado</td>
                        <td>@item.Fecha</td>
                        <td>@item.Descripcion</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
