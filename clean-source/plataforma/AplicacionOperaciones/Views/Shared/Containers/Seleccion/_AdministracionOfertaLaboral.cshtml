    methodUpdOfertaLaboral = (idOfertaLaboral, descripcionLarga, descripcionCorta, fechaInicio, fechaTermino, target, filterType, dataFilter, targetupd) => {
        __POSTData(`${__SERVERHOST}/Seleccion/ActualizarOfertaLaboral`, {
            idOfertaLaboral: idOfertaLaboral,
            descripcionLarga: descripcionLarga,
            descripcionCorta: descripcionCorta,
            fechaInicio: fechaInicio,
            fechaTermino: fechaTermino,
            target: target
        })
            .then(resolve => {
                resolve.forEach(tags => {
                    if (tags.Code === '200') {
                        document.getElementById("div__alert").style.display = "block";
                        document.getElementById("alertSuccess").classList.add("show");
                        document.getElementById("alertSuccess").innerHTML = tags.Message;

                        setTimeout(() => {
                            document.getElementById("div__alert").style.display = "none"
                            document.getElementById("alertSuccess").classList.remove("show");
                            document.getElementById("alertSuccess").innerHTML = "";

                            window.location.href = window.location.pathname
                            //methodSearchOfertasLaborales(filterType, dataFilter, "", pagination)
                        }, 2000)

                    }
                    else {
                        document.getElementById("div__alert").style.display = "block";
                        document.getElementById("alertError").classList.add("show");
                        document.getElementById("alertError").innerHTML = tags.Message;

                        setTimeout(() => {
                            document.getElementById("div__alert").style.display = "none"
                            document.getElementById("alertError").classList.remove("show");
                            document.getElementById("alertError").innerHTML = "";
                        }, 4000)
                    }
                })
            })
            .catch(reject => {

            })
    }

