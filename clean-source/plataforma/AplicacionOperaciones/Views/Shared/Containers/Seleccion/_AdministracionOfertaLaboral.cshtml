
<div style="" class="mb-10">
    @Html.ButtonAdministracion(
                "button",
                new string[] {
                    "class='dspl-inline-block new-family-teamwork'",
                    "onclick='handleReturnMenuSeleccion()'"
                },
                new string[]
                {
                    "min-width: 50px",
