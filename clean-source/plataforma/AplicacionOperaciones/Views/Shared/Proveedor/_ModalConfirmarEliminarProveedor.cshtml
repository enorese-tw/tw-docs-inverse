
<div class="modal fade" id="modalEliminarProvee" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title family-teamwork" name="nombreModal">Eliminar Proveedor</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <p class="family-teamwork">El siguiente proveedor será eliminado permanentemente del sistema.</p>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <label class="family-teamwork">Proveedor: <span id="nombreModalToEliminar" class="dspl-inline-block mt-4neg fw-bold"></span></label>
                    </div>
                </div>
            </div>
            <div class="modal-footer ta-center">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
                        @using (Ajax.BeginForm("EliminarProveedores", "Finanzas", FormMethod.Post, new AjaxOptions()
                        {
                            HttpMethod = "POST",
                            OnSuccess = "returnSection"
                        }))
                        {
                            <input type="text" class="dspl-none" name="rutModal" id="rutModalEliminar" />
                            <button type="submit" class="cursor-pointer btn btn-success dspl-inline-block ta-left color-fx3 br-25 height-50"
                                    data-motivoanulacion="" data-codigotransaccion="" data-tipoevento="">
                                <i class="glyphicon-tw-6 glyphicon-tw-check dspl-inlblc mb-15neg"></i>
                                <span class="dspl-inlblc">
                                    <i class="family-teamwork dspl-blc fs-14 fst-normal mb-8neg">Eliminar</i>
                                    <i class="family-teamwork dspl-blc fs-14 fst-normal">Proveedor</i>
                                </span>
                            </button>

                        }
                        <button class="cursor-pointer btn btn-danger dspl-inline-block ta-left color-fx3 br-25 height-50" data-dismiss="modal">
                            <i class="glyphicon-tw-6 glyphicon-tw-cancel dspl-inlblc mb-15neg"></i>
                            <span class="dspl-inlblc">
                                <i class="family-teamwork dspl-blc fs-14 fst-normal mb-8neg">Cancelar</i>
                                <i class="family-teamwork dspl-blc fs-14 fst-normal">Eliminación</i>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>