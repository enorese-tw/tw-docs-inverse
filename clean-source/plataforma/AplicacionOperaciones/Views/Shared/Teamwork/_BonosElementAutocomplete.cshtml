@foreach (Teamwork.Model.Operaciones.Bono item in ViewBag.RenderizadoBonos)
{
    <label for="chk_@item.Codigo" class="dspl-block cursor-pointer pdt-5 pdb-10 pdr-10 pdl-10 mb-5neg @item.Asignado" style="width: 100%;" data-element="@item.Codigo">
        <input type="radio" id="chk_@item.Codigo" name="bono" class="dspl-inline-block mb-4 option-bono" value="@item.Codigo" data-html-value="@item.Nombre" onclick="handleClickOptionBono(this)" /> @item.Nombre
    </label>
}
 