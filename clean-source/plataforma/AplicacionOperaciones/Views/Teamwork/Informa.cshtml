@{
    Layout = "~/Views/Shared/_Menu.cshtml";
    ViewBag.Title = "Teamwork Informa";

}
<span id="loader" class="dspl-none">
    @Html.Partial("_LoaderTransaccion")
</span>
<main class="mt-55" id="contentInforma">
    <div class="adjoined-top">
        <div class="grid-container">
            <div class="content grid-width-100">
                <h1>Envio de Correo Electrónico &bull; Teamwork Informa!</h1>
                <p>
                    Es aqui donde podrás configurar el envio del correo electrónico mediante Teamwork Informa, con formato empresa.
                    <br />
                    Importante: el correo al procesar, será enviado de forma inmediata a su correo para que pueda ser reenviado a donde usted estime conveniente.
                </p>
            </div>
        </div>
    </div>
    <div class="adjoined-bottom">
        <div style="width: 69.6%; margin: auto auto 20px auto; background-color: #fff; border: 1px solid transparent; min-height: 100px;">
            <h1 style="font-size: 20px; margin-left: 30px; margin-top: 30px;">
                <img src="~/Resources/logoletras.png" style="width: 140px; margin-bottom: 5px;" />
                <b>TE INFORMA</b>
            </h1>
            <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Indique Titulo" style="width: 70%; border: 1px solid #0287D0; padding: 5px 10px 5px 10px; display: block; border-radius: 5px; margin-left: 30px; margin-top: -15px; margin-bottom: 30px;" />
            @*<h3 style="font-size: 17px; margin-top: -5px; ">Coronavirus – COVID-19</h3>*@
            <img src="~/Resources/human.png" style="float: right; width: 60px; margin-top: -115px; margin-right: 30px;" />
        </div>
        <div class="grid-container">
            <div class="grid-width-100" id="editor">
            </div>
        </div>
        <div class="ta-center mt-30 mb-100">
            <a href="#" id="btnEnviarCorreo" class="btn btn-success dspl-inline-block" style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
                <i class="glyphicon-tw-7 glyphicon-tw-check" style="display: inline-block;"></i>
                <span style="display: inline-block; margin-top: -7px;">
                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                        font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Enviar Correo</i>
                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                                font-size: 14px; font-style: normal; display: block;">A Usuario</i>
                </span>
            </a>
        </div>
    </div>
</main>
<script>
    $("#btnEnviarCorreo").on("click", function (e) {
        e.preventDefault();
        $("#loader").show();
        $.ajax({
            type: 'POST',
            url: '@ViewBag.ApplicationDomainTeamwork/EnviarCorreo',
            data: '{ html: "' + CKEDITOR.instances['editor'].getData().split('"').join("'") + '", titulo: "' + $("#titulo").val() + '" }',
            dataType: 'json',
            contentType: 'application/json',
            async: true,
            success: function (response) {
                $("#contentInforma").html(responde);
                $("#loader").hide();
            },
            error: function (xhr) {
                $("#contentInforma").html(xhr.responseText);
                $(".adjoined-top").css("background-color", "rgb(92, 184, 92)");
                $("#loader").hide();
            },
            complete: function () {

            }
        });
    });

    $(document).on("click", ".eventRestore", function (e) {
        e.preventDefault();
        window.location.reload();
    });

</script>