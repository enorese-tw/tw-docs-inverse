@using Teamwork.Model.Asistencia
@model List<Bonos>
@using AplicacionOperaciones.HelpersHTML
@{
    Layout = "~/Views/Shared/_Menu.cshtml";
    ViewBag.Title = "Administración Bonos";
}

<div style="width: 100%; height: 60px;"></div>
<div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 10px; margin-bottom: 20px;">
    @Html.ButtonAdministracion(
                "button",
                new string[] {
                    "class='dspl-inline-block new-family-teamwork'",
                    "onclick='handleReturnMenuAsistencia()'"
                },
                new string[]
                {
                    "min-width: 50px",
                    "border: none",
                    "text-align: center",
                    "font-weight: 100",
                    "border: 0",
                    "margin: none",
                    "background-color: transparent!important"
                },
                new string[]
                {
                    "<span class='dspl-inline-block'><span style='width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; text-align: center;' class='btn btn-teamwork pdt-5 pdr-5 pdb-5 pdl-5'><img src='../Resources/flecha-izquierda.svg' width='30' height='30' style='position: relative; left: 10%;' /></span></span>" +
                    "<span class='new-family-teamwork' style='position: relative; float: right; margin-left: 10px; margin-top: 10px; font-size: 20px; font-wight: 100;'>Volver a Menu</span>"
                },
                true
            )
</div>

<div class="col-12 col-sm-12 col-md-12 col-lg-12">
    <select id="empresa" onchange="handleChangeEmpresa(this)" class="form-control new-family-teamwork" style="width: 200px;
        display: inline-block;
">
        <option value="0" data-input="input">Seleccione Empresa</option>
        <option value="TWEST" data-input="input">EST</option>
        <option value="TWRRHH" data-input="input">OUT</option>
        <option value="TWC" data-input="input">TWC</option>
    </select>

    <input type="text" id="ficha" class="form-control" style="width: 250px; display: inline-block; font-weight:100;" placeholder="Ficha" />

    <select id="areaNegocio" class="form-control new-family-teamwork" style="width: 250px; display: none;">
        <option value="" data-input="input">Seleccione Area de Negocio</option>
    </select>

    <input type="month" id="periodo" class="form-control new-family-teamwork" style="width: 230px; display: inline-block; font-weight: 100;" />

    <button id="searchBonos" onclick="handleObtenerFichaBonos(this)" class="btn btn-teamwork" style="border-radius: 25px; height: 40px; text-align: left; color: #fff; font-weight:100;" data-action="Ficha">
        <img src="~/Resources/buscar.png" width="20" height="20" style="left: -17%;" />
        Buscar
    </button>

    <div id="div__tipoAccion" style="margin-top: 10px; display: inline-block; margin-left: 30px;">
        <span class="new-new-family-teamwork" style="font-weight:100; margin-right: 5px;">Ficha</span>
        <label class="switch">
            <input type="checkbox" id="check__tipoAccion" onchange="handleChangeAction(this)" style="display: inline-block; font-weight:100;" data-action="FichaBono">
            <span class="slider round"></span>
        </label>
        <span class="new-new-family-teamwork" style="font-weight:100; margin-right: 5px;">Area Negocio</span>
    </div>
</div>

<div id="div__content" style="width: 100%; zoom:70%;">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 10px;">
        <div class="row" style="margin: 20px 0 0 20px;">
            <div id="div__cambioMonth" class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:10px; margin-bottom:10px;"></div>
        </div>
    </div>

    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
        <div class="row">
            <div id="div__errorMessage" class="col-12 col-sm-12 col-md-12 col-lg-12"></div>

            <div id="div__fichaBonos" class="col-12 col-sm-12 col-md-12 col-lg-12" style="height: 460px; overflow-x: auto; white-space:nowrap;"></div>
        </div>
    </div>

    <div class="modal fade" id="modalAdministraBonos" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="div__modalTitle" class="modal-title new-family-teamwork"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            @{
                                Html.RenderPartial("Asistencia/_ModalAdministraBonos");
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <span id="loaderSearch"></span>
</div>

@Scripts.Render("~/bundles/bonos")