@using Teamwork.Model.Asistencia
@model List<Asistencia>
@using AplicacionOperaciones.HelpersHTML
@{
    Layout = "~/Views/Shared/_Menu.cshtml";
    ViewBag.Title = "Reporte Asistencia";
}

<div style="width: 100%; height: 60px;"></div>


<div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 50px;">
    <div class="row ml-auto mr-auto" style="width:92%">
        @Html.ButtonAdministracion(
                "button",
                new string[] {
                    "class='dspl-inline-block new-family-teamwork'",
                    "onclick='handleReturnMenuAsistencia()'"
                },
                new string[]
                {
                    "min-width: 50px",
                    "border: none",
                    "text-align: center",
                    "font-weight: 100",
                    "border: 0",
                    "margin: none",
                    "background-color: transparent!important"
                },
                new string[]
                {
                    "<span class='dspl-inline-block'><span style='width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; text-align: center;' class='btn btn-teamwork pdt-5 pdr-5 pdb-5 pdl-5'><img src='../Resources/flecha-izquierda.svg' width='30' height='30' style='position: relative; left: 10%;' /></span></span>" +
                    "<span class='new-family-teamwork' style='position: relative; float: right; margin-left: 10px; margin-top: 10px; font-size: 20px; font-wight: 100;'>Volver a Menu</span>"
                },
                true
            )


        <div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
            <h2 class="new-family-teamwor" style="font-weight:100;">
                Reporte Asistencia
            </h2>
        </div>


        <div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
            <select id="empresa" onchange="handleChangeEmpresa()" class="form-control new-family-teamwork" style="width: 250px; display: inline-block;">
                <option value="0" data-input="input">Seleccione Empresa</option>
                <option value="TWEST" data-input="input">EST</option>
                <option value="TWRRHH" data-input="input">OUT</option>
                <option value="TWC" data-input="input">TWC</option>
            </select>

            <input type="month" id="periodo" class="form-control new-family-teamwork" style="width: 250px; display: inline-block; font-weight:100;" />

            <button class="btn new-family-teamwork fs-18 dspl-inline-block"
                    style="min-width: 50px; border: none; text-align: center; font-weight: 100; border: 0; background-color: transparent!important; font-weight: 100"
                    onclick="handleAsistenciaReportV2()">
                <span style='width: 50px; height: 50px; border-radius: 25px; display: flex; align-items: center; text-align: center;'
                      class='btn btn-success pdt-5 pdr-5 pdb-5 pdl-5'>
                    <img src='~/Resources/excel.png' width='25' height='25' style='position: relative; left: 20%;' />
                </span>
            </button>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
            <input id="input__areaNegocio" list="select__areaNegocio" class="form-control new-family-teamwork" style="width: 500px; display: inline-block;" placeholder="Area de Negocio">
            <datalist id="select__areaNegocio" class="form-control new-family-teamwork" style="width: 500px; display: none;">
            </datalist>

            <button class="btn new-family-teamwork fs-18 dspl-inline-block"
                    style="min-width: 50px; border: none; text-align: center; font-weight: 100; border: 0; background-color: transparent!important; font-weight: 100"
                    onclick="handleAddAreaNegocio()">
                <span style='width: 50px; height: 50px; border-radius: 25px; display: flex; align-items: center; text-align: center;'
                      class='btn btn-teamwork pdt-5 pdr-5 pdb-5 pdl-5'>
                    <img src='~/Resources/add.png' width='25' height='25' style='position: relative; left: 20%;' />
                </span>
            </button>
        </div>

        <div id="div__errorReporte" class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center" style="margin-top:10px;"></div>

        <div id="div__areasNegocios" class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center" style="margin-top:10px;"></div>
    </div>
</div>

@Scripts.Render("~/bundles/asistencia")