@using Teamwork.Model.Asistencia
@model List<Asistencia>
@using AplicacionOperaciones.HelpersHTML
@{
    Layout = "~/Views/Shared/_Menu.cshtml";
    ViewBag.Title = "";
}
<div style="width: 100%; height: 60px;"></div>
<div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 10px; margin-left: 30px;">
    <div class="row">
        @Html.ButtonAdministracion(
                "button",
                new string[] {
                    "class='dspl-inline-block new-family-teamwork'",
                    "onclick='handleReturnMenuAsistencia()'"
                },
                new string[]
                {
                    "min-width: 50px",
                    "border: none",
                    "text-align: center",
                    "font-weight: 100",
                    "border: 0",
                    "margin: none",
                    "background-color: transparent!important"
                },
                new string[]
                {
                    "<span class='dspl-inline-block'><span style='width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; text-align: center;' class='btn btn-teamwork pdt-5 pdr-5 pdb-5 pdl-5'><img src='../Resources/flecha-izquierda.svg' width='30' height='30' style='position: relative; left: 10%;' /></span></span>" +
                    "<span class='new-family-teamwork' style='position: relative; float: right; margin-left: 10px; margin-top: 10px; font-size: 20px; font-wight: 100;'>Volver a Menu</span>"
                },
                true
            )

        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="row">
                <h1>Administrador Cierre de Periodos</h1>
            </div>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom: 10px;">
            <div class="row">
                <span class="new-family-teamwork" style="font-weight: 100; margin-right: 10px;">
                    Desde:
                    <input type="month" id="input__periodoDesde" class="form-control new-family-teamwork" style="width: 230px; display: inline-block; font-weight:100;" onchange="handleChangePeriodo()" />
                </span>
                <span class="new-family-teamwork" style="font-weight: 100; margin-right: 10px;">
                    Hasta:
                    <input type="month" id="input__periodoHasta" class="form-control new-family-teamwork" style="width: 230px; display: inline-block; font-weight:100;" onchange="handleChangePeriodo()" />
                </span>

                <select id="empresa" onchange="handleChangeEmpresa()" class="form-control new-family-teamwork" style="width: 200px; display:none; ">
                    <option value="0" data-input="input">Seleccione Empresa</option>
                    <option value="TWEST" data-input="input">EST</option>
                    <option value="TWRRHH" data-input="input">OUT</option>
                    <option value="TWC" data-input="input">TWC</option>
                </select>

                <select id="areaNegocio" class="form-control new-family-teamwork" style="width: 200px; display:none; margin-right: 10px;">
                    <option value="0" data-input="input">Seleccione Area de Negocio</option>
                </select>

                <button id="button__searchPeriodos" onclick="handleSearchPeriodos()" class="btn btn-teamwork" style="border-radius: 25px; height: 40px; text-align: left; color: #fff; font-weight:100;">
                    Buscar
                    <img src="~/Resources/buscar.png" width="20" height="20" style="left: -17%;" />
                </button>
            </div>
        </div>

        @*<div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom: 10px; margin-left: 20px;">
            <div class="row">
                <select id="empresa" onchange="handleChangeEmpresa()" class="form-control new-family-teamwork" style="width: 200px; display:none; ">
                    <option value="0" data-input="input">Seleccione Empresa</option>
                    <option value="TWEST" data-input="input">EST</option>
                    <option value="TWRRHH" data-input="input">OUT</option>
                    <option value="TWC" data-input="input">TWC</option>
                </select>

                <select id="areaNegocio" class="form-control new-family-teamwork" style="width: 200px; display:none; margin-right: 10px;">
                    <option value="0" data-input="input">Seleccione Area de Negocio</option>
                </select>
            </div>
        </div>*@

        <div id="div__tipoPeriodo" class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom: 20px;">
            <label class="switch">
                <input type="radio" id="periodo__general" onchange="handleChangeTipoPeriodo()" name="tipoPeriodo" value="General" checked style="display: inline-block; font-weight:100;">
                <span class="slider round"></span>
            </label>
            <span class="new-new-family-teamwork" style="font-weight:100; margin: 5px 15px 5px 5px;">General</span>

            <label class="switch">
                <input type="radio" id="periodo__areaneg" onchange="handleChangeTipoPeriodo()" name="tipoPeriodo" value="AreaNegocio" style="display: inline-block; font-weight:100;">
                <span class="slider round"></span>
            </label>
            <span class="new-new-family-teamwork" style="font-weight:100; margin: 5px 15px 5px 5px;">Area de Negocio</span>

        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-12" id="div__errores" style="text-align:center;">

        </div>


        <div class="col-12 col-sm-12 col-md-12 col-lg-10">
            <div class="row">
                <div id="div__periodos" class="col-12 col-sm-12 col-md-12 col-lg-12">

                </div>
            </div>
        </div>


        <div class="modal fade" id="modalEditAsistencia" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title new-family-teamwork">Libro de Asistencia</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                @{
                                    Html.RenderPartial("Asistencia/_ModalCambioAsistencia");
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/asistencia")