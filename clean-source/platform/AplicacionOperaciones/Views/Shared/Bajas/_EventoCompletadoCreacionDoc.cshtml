@switch ((string)ViewBag.OptionCreacionDocumento)
{
    case "200":
        <script>
            window.location.href = "@ViewBag.RedireccionamientoDocumento";
        </script>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
                <img src="~/Resources/complementox3.png" style="width: 100px;" class="dspl-block m-auto" />
                <h2 class="family-teamwork">Estamos creando el documento de complemento de finiquito...</h2>
                <p class="family-teamwork">
                    Estamos trabajando en su solicitud, espere un momento.
                </p>
            </div>
        </div>
        break;
    case "404":
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
                <img src="~/Resources/cancel.png" style="width: 80px; border-radius: 50%;" class="danger dspl-block m-auto" />
                <h3 class="family-teamwork ta-center color-70x3 mt-10ne">@ViewBag.MessageEvento</h3>
                @using (Ajax.BeginForm("ContinuarEtapa", "Bajas", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "contentPayment",
                    LoadingElementId = "loader"
                }))
                {
                    <input type="text" class="dspl-none" name="option" value="AgregarHaberes" />
                    <input type="text" class="dspl-none" name="codigoComplemento" value="@ViewBag.CodigoComplemento" />
                    <input type="text" class="dspl-none" name="codigoFiniquito" value="@ViewBag.CodigoFiniquito" />
                    <button type="submit" class="btn btn-warning"
                            style="border-radius: 25px; height: 40px; margin-top: 12px; text-align: left; color: #fff;">
                        <i class="glyphicon-tw-7 glyphicon-tw-reasignar" style="display: inline-block;"></i>
                        <span style="display: inline-block; margin-top: -7px;">
                            <i style="font-family: 'Open Sans Condensed', sans-serif;
                                        font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Agregar Haberes</i>
                            <i style="font-family: 'Open Sans Condensed', sans-serif;
                                        font-size: 14px; font-style: normal; display: block;">Complemento</i>
                        </span>
                    </button>
                }

                @using (Ajax.BeginForm("ContinuarEtapa", "Bajas", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "contentPayment",
                    LoadingElementId = "loader"
                }))
                {
                    <input type="text" class="dspl-none" name="option" value="AgregarDescuentos" />
                    <input type="text" class="dspl-none" name="codigoComplemento" value="@ViewBag.CodigoComplemento" />
                    <input type="text" class="dspl-none" name="codigoFiniquito" value="@ViewBag.CodigoFiniquito" />
                    <button type="submit" class="btn btn-warning"
                            style="border-radius: 25px; height: 40px; margin-top: 12px; text-align: left; color: #fff;">
                        <i class="glyphicon-tw-7 glyphicon-tw-reasignar" style="display: inline-block;"></i>
                        <span style="display: inline-block; margin-top: -7px;">
                            <i style="font-family: 'Open Sans Condensed', sans-serif;
                                        font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Agregar Descuentos</i>
                            <i style="font-family: 'Open Sans Condensed', sans-serif;
                                        font-size: 14px; font-style: normal; display: block;">Complemento</i>
                        </span>
                    </button>
                }

                <a href="#" data-dismiss="modal" type="submit" class="btn btn-danger"
                   style="border-radius: 25px; height: 40px; margin-top: 12px; text-align: left; color: #fff;">
                    <i class="glyphicon-tw-7 glyphicon-tw-cancel" style="display: inline-block;"></i>
                    <span style="display: inline-block; margin-top: -7px;">
                        <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Cancelar y</i>
                        <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                                font-size: 14px; font-style: normal; display: block;">Cerrar</i>
                    </span>
                </a>
            </div>
        </div>
        break;
}