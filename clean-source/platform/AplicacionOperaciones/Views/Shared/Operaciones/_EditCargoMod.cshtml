                                        <p class="ml-30 family-teamwork alert alert-warning">
                                            Nota: Se registrará con movilización $ 0 la asignación de colación.
                                        </p>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 mb-100" id="contentFullBonos">
                        <h4 class="family-teamwork dspl-block">ASIGNACIONES DE BONOS</h4>
                        @Html.Partial("Operaciones/_ContentBonos")
                    </div>
                </div>
            }
            break;
        case "404":
            <div style="background-color: rgb(107, 142, 164); background-image: url(../../Resources/bnn_clientes.PNG);
                                        background-size: 40%; background-position: center; background-repeat: no-repeat; width: 100%; height: 400px; margin-top: 55px;"></div>
            <div style="width: 100%; height: 400px; margin-top: -400px; background-color: rgba(0, 0, 0, 0.5);"></div>
            <div class="row mt-350neg ml-auto mr-auto" style="width: 92%;" id="contentCreate">
                @Html.Partial("Operaciones/_SeleccionaCliente")
            </div>
            break;
    }
</div>

<script>

    function HideModalConfirmacion() {
        $("#modalConfirmacionEvento").modal("hide");
    }

    function onBegin() { }

    function ShowModalConfirmacion() {
        $("#modalConfirmacionEvento").modal("show");
    }

    $(document).on("blur", "#nombreCargo", function () {
        $("#btnCambioNombre").trigger("click");
    });

    $(document).on("blur", "#sueldoBase", function () {
        $("#btnCambiarSueldoBase").trigger("click");
    });

    $(document).on("blur", "#gratificacion", function () {
        $("#btnTypeGratifPactada").trigger("click");
    });

    $(document).on("blur", "#observGratiConv", function () {
        $("#btnTypeGratifPactada").trigger("click");
    });

    $(document).on("click", ".gratif", function () {
        
        switch ($(this).attr("data-trigger-action")) {
            case "typeIntermGratifLegal":
                
                $(".glosaGratifCostoCero").addClass("dspl-none").removeClass("dspl-block");
                $(".contentGratificacionMonto").removeClass("dspl-none").addClass("dspl-block");

                $(".contentGratificacionPactada").addClass("dspl-none").removeClass("dspl-block");

                break;
            case "btnTypeGratifLegal":

                $("#" + $(this).attr("data-trigger-action")).trigger("click");

                $(".glosaGratifCostoCero").addClass("dspl-none").removeClass("dspl-block");
                $(".glosaGratifLegal").removeClass("dspl-none").addClass("dspl-block");

                $(".contentGratificacionPactada").addClass("dspl-none").removeClass("dspl-block");

                break;
            case "btnTypeGratifCostoCero":

                $("#" + $(this).attr("data-trigger-action")).trigger("click");

                $(".glosaGratifCostoCero").removeClass("dspl-none").addClass("dspl-block");
                $(".glosaGratifLegal").addClass("dspl-none").removeClass("dspl-block");

                $(".contentGratificacionPactada").addClass("dspl-none").removeClass("dspl-block");
                $(".contentGratificacionMonto").addClass("dspl-none").removeClass("dspl-block");

                break;
            case "btnTypeGratifPactada":
                
                $(".glosaGratifCostoCero").addClass("dspl-none").removeClass("dspl-block");
                $(".glosaGratifLegal").addClass("dspl-none").removeClass("dspl-block");

                $(".contentGratificacionPactada").removeClass("dspl-none").addClass("dspl-block");

                break;

        }
    });


</script>