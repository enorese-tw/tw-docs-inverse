                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-20">
                        @using (Ajax.BeginForm("ActualizaNombreCargo", "Operaciones", new AjaxOptions()
                        {
                            HttpMethod = "POST",
                            UpdateTargetId = "encabezadoSolicitudCargo",
                            InsertionMode = InsertionMode.Replace
                        }, new { @style = "display: block;" }))
                        {
                            <input type="text" class="dspl-none" name="codigoSolicitud" value="@item.CodigoSolicitud" />
                            <input type="text" value="@item.NombreCargo" id="nombreCargo" name="nombreCargo" class="input-nofocus dspl-inline-block pdl-5 pdr-5 pdt-10 pdb-10 family-teamwork mt-10neg br-1-solid-200x3 bt-1-solid-200x3
