<div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
    @foreach (AplicacionOperaciones.Models.Recepcion.Recepcionar item in ViewBag.ReferenciaDespachado)
    {
        <img src="~/Resources/caja-abierta.png" class="ml-auto mr-auto dspl-inline-block" style="width: 70px;">
        <h1 class="family-teamwork" style="font-size: 20px;">Se ha aperturado el contenedor de codigo</h1>
        <h1 class="family-teamwork mt-10neg">@item.CodigoDespacho</h1>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-2">
                <h1 class="family-teamwork color-428BCA fw-bold" style="font-size: 50px;">@item.Total</h1>
                <h3 class="family-teamwork mt-20neg" style="font-size: 20px;">Documentos totales</h3>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-2">
                <h1 class="family-teamwork color-9218492 fw-bold" style="font-size: 50px;">@item.Recepcionados</h1>
                <h3 class="family-teamwork mt-20neg" style="font-size: 20px;">Documentos Recepcionados</h3>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-2">
                <h1 class="family-teamwork fw-bold" style="font-size: 50px;">@item.Despachados</h1>
                <h3 class="family-teamwork mt-20neg" style="font-size: 20px;">Documentos Por Recepcionar</h3>
            </div>
            <div class="col-lg-3"></div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                <h2 class="family-teamwork ta-center">Para recepcionar documentos debe hacer la lectura del codigo de barra de alguno de estos documentos</h2>
            </div>
        </div>
        <div class="row ta-center">
            <div class="col-lg-2"></div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-4">
                <img src="~/Resources/ilustracionlecturacheque.jpg" class="dspl-block m-auto" style="width: 150px;" />
                <h4 class="family-teamwork ta-center">Cheque Impreso</h4>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-4">
                <img src="~/Resources/ilustracionlecturadocumentos.jpg" class="dspl-block m-auto" style="width: 150px;" />
                <h4 class="family-teamwork ta-center">Finiquito o Caratula Finiquito</h4>
            </div>
            <div class="col-lg-2"></div>
        </div>
    }
</div>