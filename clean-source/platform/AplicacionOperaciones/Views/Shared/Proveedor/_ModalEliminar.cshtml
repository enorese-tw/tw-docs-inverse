<div class="modal fade" id="modalEliminarProvee" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title family-teamwork">Actualizar Proveedor </h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("EliminarProveedores", "Finanzas", FormMethod.Post, new AjaxOptions()
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "messageModal"
                }))
                {
                    <input type="text" id="rutmodal" class="dspl-none " name="rutModal" />
                    <span id="messageModal"></span>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" id="nombremodal" name="nombreModal" />
                            <button type="submit" class="btn btn-warning">
                                Actualizar
                            </button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>