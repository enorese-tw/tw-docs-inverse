<div class="modal fade" id="modalEliminarGasto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title family-teamwork" name="nombreModal">Eliminar Gasto</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <p class="family-teamwork"><b>El siguiente gasto seta eliminado permanentemente del sistema.</b></p>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <label class="family-teamwork">Tipo Documento: <span id="documentoToEliminar" class="dspl-inline-block mt-4neg fw-bold"></span></label>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <label class="family-teamwork">Numero Documento: <span id="nombreModalToEliminar" class="dspl-inline-block mt-4neg fw-bold"></span></label>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <label class="family-teamwork">Proveedor: <span id="proveedorModalToEliminar" class="dspl-inline-block mt-4neg fw-bold"></span></label>
                    </div>



                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-1">


                @using (Ajax.BeginForm("MantenedorGastosX", "Finanzas", FormMethod.Post, new AjaxOptions()
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "mgastosidDelete"
                }, new { @style = "display: block;" }))
                {
                    @*<div class="col-12 col-sm-12  col-md-12 col-lg-12 errorModal" id="messageDelete">
                <span id="mgastosidDelete"></span>
            </div>*@

                    <div class="col-12 col-sm-12  col-md-12 col-lg-12 errorModal" id="messageDelete">

                        <div id="mgastosidDelete">
                        </div>

                    </div>

                    <input type="text" class="dspl-none" name="acciones" value="SCOD" />
                    <input type="text" class="dspl-none" name="idproveedor" id="idproveedorD" />
                    <input type="text" class="dspl-none" name="IdEmpresa" id="IdEmpresaD" />
                    <input type="text" class="dspl-none" name="IdTipoDoc" id="IdTipoDocD" />
                    <input type="text" class="dspl-none" name="token" id="tokenD" />
                    <input type="text" class="dspl-none" name="descripcion" value="" />
                    <input type="text" class="dspl-none" name="IdNumDoc" id="idnumerodocD" />
                    <input type="text" class="dspl-none" name="descripcion" value="" />


                    <button type="submit" class="btn btn-warning mt-10" id="btnBuscarSolicitud"
                            style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
                        @*<i class="glyphicon-tw-7 glyphicon-tw-check" style="display: inline-block;"></i>*@
                        @*<i class="glyphicon-tw-6 glyphicon-tw- dspl-inlblc mb-15neg"></i>*@
                        <i class="glyphicon-tw-7 glyphicon-tw-actualizar" style="display: inline-block;"></i>
                        <span style="display: inline-block; margin-top: -7px;">
                            <i style="font-family: 'Open Sans Condensed', sans-serif;
                                            font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Mostrar Detalle</i>
                            @*<i style="font-family: 'Open Sans Condensed', sans-serif;
                    font-size: 14px; font-style: normal; display: block;">Gasto</i>*@
                        </span>
                    </button>
                }
            </div>
            <div class="modal-footer ta-center">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
                        @using (Ajax.BeginForm("MantenedorGastosX", "Finanzas", FormMethod.Post, new AjaxOptions()

                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,

                            OnSuccess = "modalCerrar",
                            OnComplete = "returnSection"

                        }))
                        {
                            <input type="text" class="dspl-none" name="idproveedor" id="idproveedor" />
                            <input type="text" class="dspl-none" name="IdEmpresa" id="IdEmpresa" />
                            <input type="text" class="dspl-none" name="IdTipoDoc" id="IdTipoDoc" />
                            <input type="text" class="dspl-none" name="token" id="token" />
                            <input type="text" class="dspl-none" id="idnumerodoc" name="IdNumDoc" />
                            <input type="text" class="dspl-none" name="acciones" value="D" />
                            <input type="text" class="dspl-none" name="descripcion" value="" />

                            <button type="submit" class="cursor-pointer btn btn-danger dspl-inline-block ta-left color-fx3 br-25 height-50">
                                <i class="glyphicon-tw-6 glyphicon-tw-trash dspl-inlblc mb-15neg"></i>
                                <span class="dspl-inlblc">
                                    <i class="family-teamwork dspl-blc fs-14 fst-normal mb-8neg">Eliminar</i>
                                    <i class="family-teamwork dspl-blc fs-14 fst-normal">Gasto</i>
                                </span>
                            </button>

                        }
                        <button class="cursor-pointer btn btn-success dspl-inline-block ta-left color-fx3 br-25 height-50" data-dismiss="modal">
                            <i class="glyphicon-tw-6 glyphicon-tw-check dspl-inlblc mb-15neg"></i>
                            <span class="dspl-inlblc">
                                <i class="family-teamwork dspl-blc fs-14 fst-normal mb-8neg">Cancelar</i>
                                <i class="family-teamwork dspl-blc fs-14 fst-normal">Eliminación</i>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function modalCerrar() {
        $("#modalEliminarGasto").modal("hide");
        $("#mgastosidDelete").val($(this).attr(""));
        $("#mgastosidDelete").text($(this).attr(""));
        
    }
    function returnSection() {
        window.location.reload();
}
</script>
