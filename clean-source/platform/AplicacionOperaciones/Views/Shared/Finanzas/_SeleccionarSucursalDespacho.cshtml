<div class="col-12 col-sm-12 col-md-12 col-lg-12">
    <img src="~/Resources/mapa.png" class="ml-auto mr-auto dspl-block mb-30" style="width: 200px;" />
    <h1 class="family-teamwork ta-center">Seleccionar la sucursal de despacho del contenedor</h1>
</div>
<div class="col-md-1 col-lg-2"></div>
<div class="col-12 col-sm-12 col-md-10 col-lg-8 ta-center">
    @using (Ajax.BeginForm("AgregarSucursalDestino", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "contentDespacho",
        LoadingElementId = "loader"
    }, new { @style = "display: block; width: 100%; margin: auto;" }))
    {
        <select class="form-control form-control-lg family-teamwork ta-center" style="width: 100%; text-align: center;" required name="sucursal">
            <option value="">Seleccione la sucursal de despacho del contenedor</option>
            @foreach (AplicacionOperaciones.Models.Finanzas.Sucursal item in ViewBag.RenderizadoSucursales)
            {
                <option value="@item.Nombre">@item.Nombre - @item.Direccion</option>
            }
        </select>
        //

        <select class="form-control form-control-lg family-teamwork ta-center mt-30 dspl-none" style="width: 100%; text-align: center;">
            <option value="">Seleccione la impresora donde se imprimira el comprobante de despacho</option>
            @foreach (AplicacionOperaciones.Models.Teamwork.Impresoras item in ViewBag.RenderizadoImpresoras)
            {
                <option value="@item.IpAddress">@item.Nombre</option>
            }
        </select>

        <input type="text" name="codigoProceso" class="dspl-none" value="@ViewBag.ReferenciaCodigoProceso" />
        <button type="submit" class="btn btn-success mt-30"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-check" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Terminar y Despachar</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                        font-size: 14px; font-style: normal; display: block;">Contenedor</i>
            </span>
        </button>
    }
</div>
<div class="col-md-1 col-lg-2"></div>

