@if (((List<AplicacionOperaciones.Models.Finanzas.Cheques>)ViewBag.RenderizadoCheques).Count > 0)
{
    <table border="1" cellspacing="0" cellpadding="5" style="width: 100%;" class="family-teamwork">
        <tbody>
            <tr>
                <td class="ta-center">Tipo Documento</td>
                <td class="ta-center">Folio</td>
                <td class="ta-center">Rut Trabajador</td>
                <td class="ta-center">Empresa</td>
                <td class="ta-center">Total Finiquito</td>
                <td></td>
            </tr>
            @foreach (AplicacionOperaciones.Models.Finanzas.Cheques item in ViewBag.RenderizadoCheques)
            {
                <tr>
                    <td class="ta-center">@item.Documento</td>
                    <td class="ta-center">@item.Rut</td>
                    <td class="ta-center">@item.Nombres</td>
                    <td class="ta-center">@item.Empresa</td>
                    <td class="ta-center" style="font-size: 20px;">@item.Monto</td>
                    <td>
                        @using (Ajax.BeginForm("IncorporarChequePago", "Finanzas", new AjaxOptions()
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "chequesConfirmadas",
                            LoadingElementId = "loader"
                        }))
                        {
                            <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
                            <input type="text" name="codigoPago" value="@item.CodigoPago" class="dspl-none" />
                            <input type="text" name="tipoPago" value="@ViewBag.ReferenciaMetodoPago" class="dspl-none" />
                            <input type="text" name="origen" value="@item.Origen" class="dspl-none" />
                            <button type="submit" class="btn btn-success"
                                    style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
                                <i class="glyphicon-tw-7 glyphicon-tw-add2" style="display: inline-block;"></i>
                                <span style="display: inline-block; margin-top: -7px;">
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                    font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Agregar Cheque</i>
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                            font-size: 14px; font-style: normal; display: block;">Proceso de Pago</i>
                                </span>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <img src="~/Resources/sinresultados.png" style="width: 100px;" class="dspl-block m-auto" />
    <h1 class="family-teamwork ta-center color-70x3 mt-10ne">No se han encontrado finiquitos Confirmados para</h1>
    <h1 class="family-teamwork ta-center color-70x3 mt-10neg" style="font-size: 50px;">CHEQUE</h1>
    <p class="family-teamwork ta-center">Puedes actualizar los finiquitos confirmados</p>
    <div class="ta-center">
        @using (Ajax.BeginForm("ActualizarChequesConfirmadas", "Finanzas", new AjaxOptions()
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "chequesConfirmadas",
            LoadingElementId = "loader"
        }))
        {
            <button type="submit" class="btn btn-warning"
                    style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
                <i class="glyphicon-tw-7 glyphicon-tw-actualizar" style="display: inline-block;"></i>
                <span style="display: inline-block; margin-top: -7px;">
                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                        font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Actualizar Finiquitos</i>
                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block;">Confirmados</i>
                </span>
            </button>
        }
    </div>
    
}