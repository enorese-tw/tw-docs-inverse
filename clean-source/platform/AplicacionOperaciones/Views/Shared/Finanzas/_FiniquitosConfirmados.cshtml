            <Button type="submit" class="dspl-block btn-success" style="width: 100%; min-height: 200px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.4); border: none;">
                <h1 class="family-teamwork fw-bold ta-center color-fx3" style="font-size: 22px;">Emitir Proceso</h1>
                <h2 class="family-teamwork ta-center mt-10neg color-fx3" style="font-size: 19px;">de pago</h2>
                <div class="glyphicon-tw-check ml-auto mr-auto mt-20 mb-20" style="width: 50px; height: 50px;"></div>
            </Button>
        }
    </div>
    <div class="col-lg-5"></div>
