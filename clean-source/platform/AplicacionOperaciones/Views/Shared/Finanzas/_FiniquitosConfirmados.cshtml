@if ((string)ViewBag.RenderizadoEmisionPago == "N")
{
    <table class="ml-auto mr-auto mt-30 mb-100" style="width: 90%;" border="1" cellspacing="1" cellpadding="5">
        <thead class="anulado">
            <tr>
                <td class="family-teamwork ta-center color-fx3">Folio</td>
                <td class="family-teamwork ta-center color-fx3">Rut</td>
                <td class="family-teamwork ta-center color-fx3">Nombre</td>
                <td class="family-teamwork ta-center color-fx3">Empresa</td>
                <td class="family-teamwork ta-center color-fx3">Monto Finiquito</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (AplicacionOperaciones.Models.Finanzas.Pagos item in ViewBag.RenderizadoPagosConfirmados)
            {
                <tr>
                    <td class="family-teamwork ta-center" style="font-size: 20px;">@item.Folio</td>
                    <td class="family-teamwork ta-center" style="font-size: 20px;">@item.Rut</td>
                    <td class="family-teamwork" style="font-size: 20px;">@item.Destintario</td>
                    <td class="family-teamwork ta-center" style="font-size: 20px;">@item.Empresa</td>
                    <td class="family-teamwork fw-bold ta-center success color-fx3" style="font-size: 20px;">@item.Monto</td>
                    <td>
                        @using (Ajax.BeginForm("SeleccionIndividual", "Finanzas", new AjaxOptions()
                        {
                            HttpMethod = "POST",
                            UpdateTargetId = "finiquitosConfirmados",
                            InsertionMode = InsertionMode.Replace
                        }, new { @style = "display: inline-block;" }))
                        {
                            <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
                            <input type="text" name="codigoMetodoPago" value="@ViewBag.ReferenciaCodigoMetodoPago" class="dspl-none" />
                            <input type="text" name="codigoPago" value="@item.CodigoPago" class="dspl-none" />
                            <button type="submit" class="btn btn-success" style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
                                <i class="glyphicon-tw-7 glyphicon-tw-check" style="display: inline-block;"></i>
                                <span style="display: inline-block; margin-top: -7px;">
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                    font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Incluir Finiquito</i>
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                    font-size: 14px; font-style: normal; display: block;">En proceso de pago</i>
                                </span>
                            </button>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
}


