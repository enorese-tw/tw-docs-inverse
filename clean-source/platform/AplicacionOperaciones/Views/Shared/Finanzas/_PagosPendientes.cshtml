<table border="1" cellspacing="0" cellpadding="5" style="width: 100%;" class="family-teamwork">
    <tbody>
        <tr>
            <td class="ta-center">Solicitud</td>
            <td class="ta-center">Creado</td>
            <td class="ta-center">Cuentas</td>
            <td class="ta-center">Monto Pago</td>
            <td class="ta-center"></td>
        </tr>
        @foreach (AplicacionOperaciones.Models.Finanzas.SolicTEF item in ViewBag.RenderizadoSolicitudesTEF)
        {
            <tr>
                <td class="ta-center">@item.NombreSolicitud</td>
                <td class="ta-center">@item.Creado</td>
                <td class="ta-center">Destino: @item.CuentaDestino <br /> Origen: @item.CuentaOrigen</td>
                <td class="ta-center" style="font-size: 20px;">@item.MontoTotal</td>
                <td>
                    @if ((string)item.OptPagar == "S")
                    {
                        using (Ajax.BeginForm("PagarProceso", "Finanzas", new AjaxOptions()
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "contentPagosPendientes",
                            LoadingElementId = "loader"
                        }))
                        {
                            <input type="text" class="dspl-none" name="codigoProces" value="@ViewBag.CodigoProceso" />
                            <input type="text" class="dspl-none" name="codigoTEF" value="@item.CodigoTEF" />
                            <input type="text" class="dspl-none" name="paginationIndex" value="@ViewBag.ReferenciaPaginationIndex" />
                            <button type="submit" class="btn btn-success"
                                    style="border-radius: 25px; height: 40px; margin-top: 12px; text-align: left; color: #fff;">
                                <i class="glyphicon-tw-7 glyphicon-tw-check" style="display: inline-block;"></i>
                                <span style="display: inline-block; margin-top: -7px;">
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Pagar</i>
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block;">Transferencia</i>
                                </span>
                            </button>
                        }

                    }
                    @if ((string)item.OptNotariar == "S")
                    {
                        using (Ajax.BeginForm("NotariarTef", "Finanzas", new AjaxOptions()
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "contentPagosPendientes",
                            LoadingElementId = "loader"
                        }))
                        {
                            <input type="text" class="dspl-none" name="codigoProces" value="@ViewBag.CodigoProceso" />
                            <input type="text" class="dspl-none" name="finiquito" value="@item.Finiquito" />
                            <input type="text" class="dspl-none" name="paginationIndex" value="@ViewBag.ReferenciaPaginationIndex" />
                            <button type="submit" class="btn btn-success"
                                    style="border-radius: 25px; height: 40px; margin-top: 12px; text-align: left; color: #fff;">
                                <i class="glyphicon-tw-7 glyphicon-tw-check" style="display: inline-block;"></i>
                                <span style="display: inline-block; margin-top: -7px;">
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Notariar</i>
                                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block;">Transferencia</i>
                                </span>
                            </button>
                        }

                    }
                </td>
            </tr>
        }
    </tbody>
</table>
