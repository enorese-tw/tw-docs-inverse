@foreach (AplicacionOperaciones.Models.Finanzas.DatosDespacho item in ViewBag.RenderizadoComprobanteDespacho)
{
    <div style="margin: auto; width: 10cm;">
        <div style="padding-top: 1cm;">
            <img src="~/Resources/logo-teamwork-chile.png" style="width: 4cm; display: block; margin: auto;" />
        </div>
        <p style="font-family: Arial; font-size: 0.4cm; text-align: center;">Teamwork Chile</p>
        <h1 style="font-family: Arial; text-align: center; border-bottom: 1px dashed #000; padding-top: 5px; padding-bottom: 30px; font-size: 0.3cm;">
            <img src="~/Resources/caja.png" style="width: 1.5cm; display: block; margin: auto;" /><br />
            Comprobante de Despacho<br />
            @item.CodigoDespacho<br />
        </h1>
        <p style="font-family: Arial; font-size: 0.3cm;">
            Codigo de Despacho: <b>@item.CodigoDespacho</b> <br />
            Estado: Depachado
        </p>
        <p style="font-family: Arial; font-size: 0.3cm;">
            Fecha de Creación: <b>@item.FechaApertura</b> <br />
            Hora de Creación: <b>@item.HoraApertura horas.</b>
        </p>
        <p style="font-family: Arial; font-size: 0.3cm;">
            Fecha de Despacho: <b>@item.FechaCierre</b> <br />
            Hora de Despacho: <b>@item.HoraCierre horas.</b>
        </p>
        <p style="font-family: Arial; font-size: 0.3cm; border-bottom: 1px dashed #000; border-top: 1px dashed #000; padding-top: 0.3cm; padding-bottom: 0.3cm; text-align: center;">
            Sucursal de despacho del contenedor
        </p>
        <p style="font-family: Arial; font-size: 0.3cm;">
            Nombre Sucursal: <b>@item.Sucursal</b><br />
            Dirección: <b>@item.Direccion</b>
        </p>
        <p style="font-family: Arial; font-size: 0.3cm; border-bottom: 1px dashed #000; border-top: 1px dashed #000; padding-top: 0.3cm; padding-bottom: 0.3cm; text-align: center;">
            Detalle del Contenido del despacho
        </p>
        <div style="margin: auto; font-size: 1cm; padding-top: 1cm; font-family: Arial; text-align: center; ">
            @item.Cantidad
        </div>
        <p style="font-family: Arial; text-align: center; font-size: 0.4cm; padding-bottom: 0.3cm; padding-left: 0.1cm; padding-right: 0.1cm;">
            Documentos despachados <br />A sucursal especificada en este contenedor
        </p>
        <p style="font-family: Arial; text-align: center; font-size: 0.4cm; padding-bottom: 0.3cm; padding-left: 0.1cm; padding-right: 0.1cm;">
            <img src="~/Resources/aprobar.png" style="width: 1.5cm; display: block; margin: auto;" /> <br />
            Este documento fue emitido y aprobado por el área de Finanzas de Teamwork.
        </p>
        <img src="@ViewBag.Base64Barcode" style="width: 10cm; height: 1.5cm; display: block; margin: 2cm auto auto auto;" />
        <p style="font-family: Arial; text-align: center; font-size: 0.3cm; padding-bottom: 0.5cm; padding-left: 0.1cm; padding-right: 0.1cm;">
            El código de barra contiene la información del despacho que se dirige a sucursal, por lo cual este codigo de barra es referencial para abrir el contenedor al momento que llega a sucursal.
        </p>
        <p style="font-family: Arial; text-align: justify; font-size: 0.3cm; padding-top: 0.5cm; padding-bottom: 0.3cm; padding-left: 0.1cm; padding-right: 0.1cm; border-top: 1px dashed #000;">
            La información contenida en este comprobante es de cáracter confidencial, la cual es solo para uso interno de los procesos de Teamwork Chile.
        </p>
    </div>
}

