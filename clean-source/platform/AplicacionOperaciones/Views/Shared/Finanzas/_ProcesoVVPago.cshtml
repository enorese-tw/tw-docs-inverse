    <div style="width: 60px; height: 60px; border-radius: 50%; background-size: 50%;" class="success dspl-inline-block glyphicon-tw-check"></div>
    <div style="width: 100px; height: 5px;" class="success dspl-inline-block"></div>
    <div style="width: 60px; height: 60px; border-radius: 50%;" class="warning dspl-inline-block"></div>
    <div style="width: 100px; height: 5px;" class="warning dspl-inline-block"></div>
    <div style="width: 60px; height: 60px; border-radius: 50%;" class="w3-gray dspl-inline-block"></div>
    <div style="width: 100px; height: 5px;" class="w3-gray dspl-inline-block"></div>
    <div style="width: 60px; height: 60px; border-radius: 50%; background-size: 50%;" class="w3-gray dspl-inline-block glyphicon-tw-excel"></div>
</div>
<div class="col-12 col-sm-12 col-md-12 col-lg-12 ta-center">
    <div style="width: 100px; border-radius: 50%; font-size: 12px;" class="dspl-inline-block family-teamwork">
        Selección de Tipo de Pago
    </div>
    <div style="width: 60px; height: 5px;" class="dspl-inline-block"></div>
    <div style="width: 100px;border-radius: 50%; font-size: 12px;" class="dspl-inline-block family-teamwork">
        Incorporación de Vale Vista
    </div>
    <div style="width: 60px; height: 5px;" class="dspl-inline-block"></div>
    <div style="width: 100px; border-radius: 50%; font-size: 12px;" class="dspl-inline-block family-teamwork">
        Confirmación de Incorporaciones
    </div>
    <div style="width: 60px; height: 5px;" class="dspl-inline-block"></div>
    <div style="width: 100px; border-radius: 50%; font-size: 12px;" class="dspl-inline-block family-teamwork">
        Obtención de Archivo de Vale Vista
    </div>
</div>
<div class="col-12 col-sm-12 col-md-12 col-lg-12">
    <h1 class="family-teamwork"><i class="glyphicon-tw-5 glyphicon-tw-transferbank"></i> Proceso de pago por Vale Vista: Incorporación de Vale Vista</h1>
</div>
<div class="col-12 col-sm-12 col-md-12 col-lg-12">
    @using (Ajax.BeginForm("ReturnStageInicial", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "procesoPago",
        LoadingElementId = "loader"
    }))
    {
        <button type="submit" class="btn btn-teamwork"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-actualizar" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                    font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Volver a Seleccionar</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                            font-size: 14px; font-style: normal; display: block;">Metodo de Pago</i>
            </span>
        </button>
    }
    @using (Ajax.BeginForm("ActualizarVVConfirmadas", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "transferenciasConfirmadas",
        LoadingElementId = "loader"
    }))
    {
        <input type="text" name="tipoPago" value="@ViewBag.ReferenciaMetodoPago" class="dspl-none" />
        <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
        <button type="submit" class="btn btn-warning"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-actualizar" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                    font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Actualizar Finiquitos</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                            font-size: 14px; font-style: normal; display: block;">Confirmados</i>
            </span>
        </button>
    }
    @using (Ajax.BeginForm("ConfirmacionProcesoVV", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "procesoPago",
        LoadingElementId = "loader"
    }))
    {
        <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
        <button type="submit" class="btn btn-success" id="btnBuscarCuentas"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-next" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Revisar Vale Vista</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                        font-size: 14px; font-style: normal; display: block;">Incluidos en Proceso</i>
            </span>
        </button>
    }
</div>
<div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-20">
    @using (Ajax.BeginForm("ActualizarVVConfirmadas", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "transferenciasConfirmadas",
        LoadingElementId = "loader"
    }))
    {
        <input type="text" name="tipoPago" value="@ViewBag.ReferenciaMetodoPago" class="dspl-none" />
        <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
        <label style="font-family: 'Open Sans Condensed', sans-serif; line-height: 5px; display: block;">Aplicar Filtrado de Vale Vista</label>
        <select class="form-control family-teamwork" style="width: 200px; display: inline-block;" id="typeFilter" name="typeFilter">
            <option value="">Seleccione Filtro</option>
            <option value="Rut">Rut Trabajador</option>
            <option value="Nombre">Nombre</option>
            <option value="Documento">Tipo Documento</option>
            <option value="Empresa">Empresa</option>
        </select>
        <input type="text" class="form-control family-teamwork dspl-none" style="width: 300px;" id="textNormal" />
        <select class="form-control family-teamwork dspl-none" style="width: 300px;" id="textDocumento">
            <option value="">Seleccione Documento</option>
            <option value="Finiquito">Finiquito</option>
            <option value="Complemento">Complemento</option>
        </select>
        <select class="form-control family-teamwork dspl-none" style="width: 300px;" id="textEmpresa">
            <option value="">Seleccione Empresa</option>
            <option value="TWEST">TWEST &bull; Empresa Servicios Transitorios</option>
            <option value="TWRRHH">TWRRHH &bull; Recursos Humanos</option>
            <option value="TWC">TWC &bull; Consultora</option>
        </select>
        <button type="submit" class="btn btn-teamwork dspl-none" id="btnBuscarSolicitud"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-buscar" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                    font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Buscar</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                            font-size: 14px; font-style: normal; display: block;">Vale Vista</i>
            </span>
        </button>
    }

    @using (Ajax.BeginForm("ActualizarVVConfirmadas", "Finanzas", new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "transferenciasConfirmadas",
        LoadingElementId = "loader"
    }))
    {
        <input type="text" name="tipoPago" value="@ViewBag.ReferenciaMetodoPago" class="dspl-none" />
        <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
        <button type="submit" class="btn btn-warning"
                style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
            <i class="glyphicon-tw-7 glyphicon-tw-actualizar" style="display: inline-block;"></i>
            <span style="display: inline-block; margin-top: -7px;">
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                    font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Restablecer Finiquitos</i>
                <i style="font-family: 'Open Sans Condensed', sans-serif;
                                            font-size: 14px; font-style: normal; display: block;">Confirmados</i>
            </span>
        </button>
    }
</div>
<div class="col-12 col-sm-12 col-md-12 col-lg-12 mt-30" id="transferenciasConfirmadas">
    @Html.Partial("Finanzas/_VVConfirmadas")
</div>

<script>

    $("#typeFilter").on("change", function(){
        switch ($(this).val()) {
            case "Rut":
                $("#textNormal").show().attr("name", "dataFilter").attr("placeholder", "Rut del Trabajador");
                $("#textDocumento").hide().removeAttr("name");
                $("#textEmpresa").hide().removeAttr("name");
                $("#btnBuscarSolicitud").show();
                break;
            case "Nombre":
                $("#textNormal").show().attr("name", "dataFilter").attr("placeholder", "Nombre del Trabajador");
                $("#textDocumento").hide().removeAttr("name");
                $("#textEmpresa").hide().removeAttr("name");
                $("#btnBuscarSolicitud").show();
                break;
            case "Documento":
                $("#textNormal").hide().removeAttr("name");
                $("#textDocumento").show().attr("name", "dataFilter");
                $("#textEmpresa").hide().removeAttr("name");
                $("#btnBuscarSolicitud").show();
                break;
            case "Empresa":
                $("#textNormal").hide().removeAttr("name");
                $("#textDocumento").hide().removeAttr("name");
                $("#textEmpresa").show().attr("name", "dataFilter");
                $("#btnBuscarSolicitud").show();
                break;
            default:
                $("#textNormal").hide().removeAttr("name");
                $("#textDocumento").hide().removeAttr("name");
                $("#textEmpresa").hide().removeAttr("name");
                $("#btnBuscarSolicitud").hide();
                break;
        }
    });

</script>
