@if (((List<AplicacionOperaciones.Models.Finanzas.Cheques>)ViewBag.RenderizadoCheques).Count > 0)
{
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            @foreach (AplicacionOperaciones.Models.Finanzas.DatosProceso item in ViewBag.RenderizadoDatosProceso)
            {
                <div class="row mt-20neg">
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                        <h1 class="family-teamwork" style="font-size: 18px;">Detalles del proceso de @item.Concepto</h1>
                        <h2 class="family-teamwork mt-5neg" style="font-size: 14px;">Codigo Referencial Proceso: @item.CodigoProceso</h2>
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 ta-right">
                        <h2 class="family-teamwork" style="font-size: 20px;">Monto Total del Proceso</h2>
                        <h2 class="family-teamwork mt-10neg" style="font-size: 25px;"><b>@item.MontoTotal</b></h2>
                        <h2 class="family-teamwork mt-10neg" style="font-size: 14px; text-transform: capitalize;"><b>@item.Cifra</b></h2>
                        <h2 class="family-teamwork mt-10neg" style="font-size: 16px;">Cantidad de @item.Concepto en Proceso: <b>@item.Cantidad</b></h2>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <table border="1" cellspacing="0" cellpadding="5" style="width: 100%;" class="family-teamwork">
                <tbody>
                    <tr>
                        <td class="ta-center">Documento</td>
                        <td class="ta-center">Folio</td>
                        <td class="ta-center">Rut Trabajador</td>
                        <td class="ta-center">Nombre Trabajador</td>
                        <td class="ta-center">Total Finiquito</td>
                        <td></td>
                    </tr>
                    @foreach (AplicacionOperaciones.Models.Finanzas.Cheques item in ViewBag.RenderizadoCheques)
                    {
                        <tr>
                            <td class="ta-center">@item.Documento</td>
                            <td class="ta-center">@item.Folio</td>
                            <td class="ta-center">@item.Rut</td>
                            <td class="ta-center">@item.Nombres</td>
                            <td class="ta-center" style="font-size: 20px;">@item.Monto</td>
                            <td>
                                @using (Ajax.BeginForm("RevertirIncorporacionChequePago", "Finanzas", new AjaxOptions()
                                {
                                    HttpMethod = "POST",
                                    InsertionMode = InsertionMode.Replace,
                                    UpdateTargetId = "ChequesConfirmados",
                                    LoadingElementId = "loader"
                                }))
                                {
                                    <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
                                    <input type="text" name="codigoPago" value="@item.CodigoPago" class="dspl-none" />
                                    <input type="text" name="tipoPago" value="@ViewBag.ReferenciaMetodoPago" class="dspl-none" />
                                    <input type="text" name="origen" value="@item.Origen" class="dspl-none" />
                                    <button type="submit" class="btn btn-anulado"
                                            style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
                                        <i class="glyphicon-tw-7 glyphicon-tw-cancel" style="display: inline-block;"></i>
                                        <span style="display: inline-block; margin-top: -7px;">
                                            <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Revertir Incorporación</i>
                                            <i style="font-family: 'Open Sans Condensed', sans-serif;
                                                        font-size: 14px; font-style: normal; display: block;">Proceso de Pago</i>
                                        </span>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <img src="~/Resources/sinresultados.png" style="width: 100px;" class="dspl-block m-auto" />
    <h1 class="family-teamwork ta-center color-70x3 mt-10ne">No se han encontrado finiquitos incorporados en el proceso de</h1>
    <h1 class="family-teamwork ta-center color-70x3 mt-10neg" style="font-size: 50px;">CHEQUES</h1>
    <p class="family-teamwork ta-center">Puedes actualizar los finiquitos incluidos</p>
    <div class="ta-center">
        @using (Ajax.BeginForm("ActualizarCHQIncorporadasConfirmadas", "Finanzas", new AjaxOptions()
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "ChequesConfirmados",
            LoadingElementId = "loader"
        }))
        {
            <input type="text" name="codigoProceso" value="@ViewBag.ReferenciaCodigoProceso" class="dspl-none" />
            <button type="submit" class="btn btn-warning"
                    style="border-radius: 25px; height: 40px; text-align: left; color: #fff;">
                <i class="glyphicon-tw-7 glyphicon-tw-actualizar" style="display: inline-block;"></i>
                <span style="display: inline-block; margin-top: -7px;">
                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                    font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">Actualizar Finiquitos</i>
                    <i style="font-family: 'Open Sans Condensed', sans-serif;
                                            font-size: 14px; font-style: normal; display: block;">Incorporados</i>
                </span>
            </button>
        }
    </div>
}